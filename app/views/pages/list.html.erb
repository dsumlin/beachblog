<% @page_title = "Pages List" %>


<div class="page list">
<%= link_to("Add New Page", {:action => 'new'}, :class => 'action new') %>
	
	<h2>Pages</h2>
	
<div><%= pluralize(@pages.size, 'page') %> found</div>
	
	<table class="listing" summary="Page list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= page.position %></td>
			<td><%= page.name %></td>
			<td class="center"><%= status_tag(page.visible) %></td>
			<td class="center"><%= page.sections.size %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => page.id}, :class => 'action_show') %>
				<%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete') %>
				</td>
			</tr>
			<% end %>
		 </table>
	</div>				
				
